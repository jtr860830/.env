# Language
export LANG=en_US.UTF-8

# Command history
export HISTSIZE=10000
export SAVEHIST=10000
export HISTFILE=~/.config/zsh/zhistory

# Editor
export VISUAL=vim
export EDITOR=$VISUAL

# System and user PATH
PATH=~/.local/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin

# Python
PATH=~/.pyenv/plugins/pyenv-virtualenv/shims:~/.pyenv/shims:~/.pyenv/bin:$PATH

# Node
PATH=~/.nodenv/shims:~/.nodenv/bin:$PATH

# Golang
export GOPATH=~/.go
export GOBIN=$GOPATH/bin
PATH=$GOBIN:$PATH

# Rust
PATH=~/.cargo/bin:$PATH

# Extra
export XDG_CONFIG_HOME=~/.config
export ENV_HOME=~/.config/env
export ZENV_HOME=$ENV_HOME/shell
export ZPLUGIN_HOME=$ZENV_HOME/plugin
